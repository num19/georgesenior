<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeorgeSenior" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/george_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/george_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GeorgeSenior.Button.Number" parent="Widget.MaterialComponents.Button">
        <item name="android:width">80dp</item>
        <item name="android:height">80dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@android:color/transparent</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>
</resources>